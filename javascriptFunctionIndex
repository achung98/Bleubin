<html>
    <head>
<title>Recyclafy</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="style.css" type="text/css">
    </head>
    <body>
        <h3>Recyclafy - Dividing recycling for you</h3>
        
    <form action="/barcode.php" method="post">
        
        <input type = "text" id="input" name= "text" class="search" placeholder="Input Search Bar Here">
        
        <button onclick="myFunction()">A</button>
        <input type = "submit" name="submit" class="submit" value="Search">
        
    </form>
    <script>
        function myFunction(){
            
           var inputValue = document.getElementsById("input").getAttribute("name");
            
            if (inputValue == "text"){
                document.setAttribute('name', 'barcode_num');
            }
            else
                {
                document.getElementsById("input").setAttribute('name', 'text');
                }
        }
    </script>
    </body>
